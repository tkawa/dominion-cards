= simple_form_for @card, :html => { :class => 'form-horizontal' } do |f|
  = f.input :name_j
  = f.input :description
  = f.input :kana
  = f.input :name
  = f.input :set
  = f.input :cost
  = f.input :potion
  = f.input :division
  = f.input :kind
  = f.input :treasure
  = f.input :victory
  = f.input :cards
  = f.input :actions
  = f.input :buys
  = f.input :coins
  = f.input :vp_tokens
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), cards_path, :class => 'btn'
