- if session[:preceding_id]
  %h1
    = link_to t('preceding_pick'), pick_path(id: session[:preceding_id]), :class => 'preceding'

%h1= t('official_recommended_picks')
%section
  %ul
    - @picks.each do |pick|
      %li
        = link_to t(pick.canonical_name, scope: 'picks.recommended', default: pick.name), pick_path(pick.pick_id)
        (#{pick.cards.sort_by(&:id).map{|c| t(c.set, scope: 'enumerize.card.set')}.uniq.join(', ')})

%h1= t('picks_by_others')
.timeline
  %a.twitter-timeline(href="https://twitter.com/search?q=dominion-cards.herokuapp.com" data-widget-id="256234896626950145" data-lang="ja")
    = t('picks_by_others')
